{
  "name": "Clone in VS Code",
  "description": "Clone any GitHub, GitLab or Bitbucket repository in Visual Studio Code",
  "version": "1.3.2",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "action": {},
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "author": "Ahnaf Mahmud",
  "homepage_url": "https://github.com/infinitepower18/clone-in-vscode",
  "permissions": ["declarativeContent", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://github.com/*",
    "https://gitlab.com/*",
    "https://bitbucket.org/*"
  ]
}
