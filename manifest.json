{
    "name": "Clone in VS Code",
    "description": "Clone any GitHub or GitLab repository in Visual Studio Code",
    "version": "1.1.0",
    "manifest_version": 3,
    "icons": { "16": "icons/16.png",
           "48": "icons/48.png",
          "128": "icons/128.png" },
    "action": {},
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
      },
    "author": "infinitepower18",
    "homepage_url": "https://github.com/infinitepower18/clone-in-vscode",
    "permissions": [
    "declarativeContent",
    "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions":[
        "https://github.com/*",
        "https://gitlab.com/*",
        "https://bitbucket.org/*"
    ]
  }
